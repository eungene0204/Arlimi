<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/listview_item_layout"
    android:paddingTop="?android:attr/actionBarSize"
    android:orientation="vertical"
    >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        
        <ImageView
            android:id="@+id/listview_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"
            android:src="@drawable/ic_action_important" />

		<TextView
            android:id="@+id/listview_item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Best Restaurant"
            android:paddingLeft="20dp"
             />
	</LinearLayout>
	
    <ImageView 
        android:id="@+id/listview_item_shop_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ogong"
        />
    
    <TextView 
        android:id="@+id/listview_item_desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="24sp"
        android:text="We are gonna sale everything.."
        />
   
</LinearLayout>
